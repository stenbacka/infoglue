<body class="generaltooledit">

<form name="inputForm" action="CreateServiceBinding.action">
	<input type="hidden" id="entityId" name="entityId" value="$!oldSiteNodeId">
	<input type="hidden" id="contentId" name="contentId" value="">
	<input type="hidden" id="repositoryId" name="repositoryId" value="$!repositoryId">
	<input type="hidden" id="path" name="path" value="">
	<input type="hidden" id="anchorId" name="anchorId" value="">
</form>

<div id="linkDiv" class="linkContainer">
	<div id="structure" style="display: block;" class="structure linkDialog-dialog">
		<table cellpadding="0" cellspacing="0" border="0">
		<tr>
			<td colspan="2">
				<select size="1" name="repositoryId" class="sitedropbox" onChange="javascript:changeRepository(this, 'itreeFrame');" class="contenttool">
					<option value="">$ui.getString("tool.contenttool.chooseRepositoryLabel")</option>
					#foreach ($repositoryVO in $repositories)
					<option value="$repositoryVO.getRepositoryId()"#if(${repositoryId} == $repositoryVO.getRepositoryId()) selected#end>$repositoryVO.getName()</option>
					#end
				</select>
			</td>
		</tr>
		<tr>
			<td height="1" colspan="2"><img src="css/images/trans.gif" width="1" height="5"></td>
		</tr>
		<tr>
			<td class="menu" colspan="2">
				#set($exp = $this.getExpansion($oldSiteNodeId))
				<iframe frameborder="0" name="itreeFrame" id="itreeFrame" src="ViewStructureToolMenuHtml!bindingViewV3.action?repositoryId=${repositoryId}$sortArg&exp=$exp&akey=/$!oldSiteNodeId/&select=$!oldSiteNodeId" width="310" height="385" ></iframe>
			</td>
		</tr>
		</table>
	</div>

	#if( $hasContentView )
	<div class="contentViewContainer">
		<div class="linkDialog-contentOverlay contentOverlay-add #if( !$hasArticleContentSelected ) active #end" id="contentOverlay-add">
			<div class="inner">
				<p>
					$ui.getString("tool.contenttool.linkDialog.article.addText")
					#if( $hasArticleLinkInLinkDialog )
					<button class="articleAdd-button" data-tab-index="0">$ui.getString("tool.contenttool.linkDialog.article.addContent")</button>
					#end
					#if( $hasHTMLHashInLinkDialog )
					<button class="articleAdd-button" data-tab-index="1">$ui.getString("tool.contenttool.linkDialog.article.addHash")</button>
					#end
				</p>
			</div>
		</div>
		<div class="linkDialog-contentOverlay #if( $hasArticleContentSelected ) active #end" id="contentOverlay-choose">
			<div id="tabsContainer" class="flora content linkDialog-dialog">
				
				<p class="linkDialogArticleIntro">
					$ui.getString("tool.contenttool.linkDialog.linkDialogArticleIntro")
				</p>
				<ul>
					#if( $hasArticleLinkInLinkDialog ) <li><a href="#internalContentLinkTab"><span>$ui.getString("tool.contenttool.linkDialog.bindArticleLink")</span></a></li> #end
					#if( $hasHTMLHashInLinkDialog ) <li><a href="#internalHashTab"><span>$ui.getString("tool.contenttool.linkDialog.bindArticleHash")</span></a></li> #end
				</ul>
		
				#if( $hasArticleLinkInLinkDialog )
				<div id="internalContentLinkTab" class="inlineTabDiv">
					<a href="javascript:toggleContentDiv();" class="optionalContent" title="$ui.getString('tool.contenttool.linkDialog.optionalContentHeader')">
						#if( "$!oldContentId" == "" )
							#set( $addContentClasses = "active" )
							#set( $clearContentClasses = "" )
						#else
							#set( $addContentClasses = "" )
							#set( $clearContentClasses = "active" )
						#end
						<p class="optionalContentText addContent $!addContentClasses">$ui.getString('tool.contenttool.linkDialog.optionalContentHeader')</p>
						<p class="optionalContentText clearContent $!clearContentClasses">$ui.getString('tool.contenttool.linkDialog.optionalContentHeader')</p>
					</a>
					<iframe frameborder="0" marginwidth="0" marginheight="0" ascrolling="no" name="internalArticleLinkFrame" id="internalLinkFrame" src="ViewContentHtmlTree.action?repositoryId=$!repositoryId&exp=$exp&akey=/$!oldContentId/&select=$!oldContentId&bodyClass=generaltooledit" class="linkDialog-contentPicker" ></iframe>
				</div>
				#end
		
				#if( $hasHTMLHashInLinkDialog )
				<div id="internalHashTab" class="inlineTabDiv">
					<a href="javascript:toggleContentDiv();" class="optionalContent" title="$ui.getString('tool.contenttool.linkDialog.optionalContentHeader')"><p>$ui.getString('tool.contenttool.linkDialog.optionalContentHeader')</p></a>
					<div id="content" style="display: none;">
						<iframe frameborder="0" name="listFrameBoundContent" id="listFrameBoundContent" src="ViewContentToolBoundList.action?repositoryId=$!repositoryId&siteNodeId=$!oldSiteNodeId&anchorId=$!oldAnchorId"></iframe>
